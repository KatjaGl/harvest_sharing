<div class="container">
  <h2>LA NATURE NOUS RASSEMBLE</h2>
  <div class="search-home">
    <div class="ville">
      <p>Choisir une ville</p>
      <%= form_tag gardens_path, method: :get, id:'search-form' do %>
        <%= text_field_tag :query_product,
        params[:query_product],
        class: "form-control d-flex align-items-center justify-content-center localisation",
        placeholder: "Marseille"%>
    </div>
    <div class="produit">
      <p>Choisir un produit</p>
      <%= text_field_tag :query_product,
      params[:query_product],
      class: "form-control d-flex align-items-center justify-content-center localisation",
      placeholder: "Courgette" %>
    </div>
    <%= submit_tag "TROUVEZ!", class: "btn btn-success" %>
    <% end %>
  </div>

  <div class="box-gardens">
    <% @gardens.each do |garden| %>
    <%= render "card", garden:garden %>
    <% end %>
  </div>

</div>
